{{!-- prueba --}}
{{#if info}}
<div class="alert alert-info">
  <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
  <strong>Info: </strong>{{info}}
</div>
{{/if}}

{{#if success}}
<div class="alert alert-success">
  <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
  <strong>Success: </strong>{{success}}
</div>
{{/if}}


